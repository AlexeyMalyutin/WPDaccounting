@model IEnumerable<FileModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Uploading Files</h1>
<hr />
@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible">
        @ViewBag.Message
    </div>
}

<form method="post" enctype="multipart/form-data">
    <input type="file" name="files" multiple required />
    <input type="text" name="description" autocomplete="off" placeholder="Enter file secription" required />
    <button type="submit" class="btn btn-primary" asp-controller="File" asp-action="UploadFile">
        Upload file
    </button>
</form>

<hr />

<h4>Files on File System</h4>
@if (Model.Count() == 0)
{
    <caption>No Records Found</caption>
}
else
{
    <caption>List of Files on File System</caption>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>File Type</th>
                <th>Created On</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <th>@file.Id</th>
                    <td>@file.Name</td>
                    <td>@file.Description</td>
                    <td>@file.FileType</td>
                    <td>@file.CreatedOn</td>
                    <td>
                        <a type="button" class="btn btn-primary" asp-controller="File" asp-action="DownloadFile" asp-route-id="@file.Id">Download</a>
                        <a type="button" class="btn btn-danger" asp-controller="File" asp-action="DeleteFile" asp-route-id="@file.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}