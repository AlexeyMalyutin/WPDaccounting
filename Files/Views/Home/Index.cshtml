@model WpdListViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Uploading Files</h1>
<hr />
@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible">
        @ViewBag.Message
    </div>
}

<div class="row">
    <div class="col-sm-2">
        <form action="#" method="get">
            <div class="form-group">
                <label class="control-label">что-то1: </label>
                <input name="name" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">что-то2: </label>
                <select name="smth" asp-items="Model.Authors" class="form-control"></select>
            </div>
            <button type="submit" class="btn btn-primary" style="width:49%">Filter</button>
            <a class="btn btn-success" asp-controller="#" asp-action="#" style="width:49%">Create Author</a>
        </form>
    </div>
    <div class="col-sm-10">
        <a type="button" class="btn btn-primary" asp-controller="Home" asp-action="Create">Upload new file</a>
            
        <hr />

        <h4>Files on File System</h4>
        @if (Model.WPDs.Count() == 0)
        {
            <div class="text-center">No Records Found</div>
        }
        else
        {
            @*<caption>List of Files on File System</caption>*@
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Дисциплина</th>
                        <th>дата утверждения</th>
                        <th>дата формального утверждения</th>
                        <th>Статус</th>
                        <th>Специальность</th>
                        <th>Профиль</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model.WPDs)
                    {
                    <tr>
                        <th>@file.Id</th>
                        <td>@file.Name</td>
                        <td>@file.DateOfApproval</td>
                        <td>@file.DateOfFormalApproval</td>
                        <td>@file.Status</td>
                        <td>@file.Specialization</td>
                        <td>@file.Subspecialization</td>
                        <td>
                            <a type="button" class="btn btn-primary" asp-controller="Home" asp-action="DownloadFile" asp-route-id="@file.Id">Download</a>
                            <a type="button" class="btn btn-danger" asp-controller="Home" asp-action="DeleteFile" asp-route-id="@file.Id">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>